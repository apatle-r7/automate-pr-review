{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommits"],
  "timezone": "UTC",
  "schedule": ["before 1:10pm on Sunday"],
  "maven": { "enabled": true },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeStrategy": "squash"
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "impact-major"]
    },
    {
      "matchPackagePatterns": ["^java$", "org.apache.maven"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "impact-critical"]
    },
    {
      "matchPackagePatterns": ["^org.springframework"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "impact-major"]
    },
    {
      "matchPackagePatterns": ["junit", "^org.mockito"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^org.apache.maven.plugins"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security", "impact-critical"],
    "automerge": false,
    "assignees": ["@owner"]
  },
  "prCreation": "not-pending",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 3,
  "prConcurrentLimitType": "global",
  "rangeStrategy": "auto",
  "lockFileMaintenance": {
    "enabled": false
  }
}